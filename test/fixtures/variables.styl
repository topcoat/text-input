var-overflow = hidden
var-background-color = #f2f3f3
var-backgorund-color--body = #DFE2E2
var-background-color--down = #d3d7d7
var-border = 1px solid #a5a8a8
var-box-shadow = inset 0 1px #fff
var-box-shadow--down = inset 0 1px rgba(0, 0, 0, 0.12)
var-color = #454545
var-margin = 5px 10px 5px 0
var-vertical-align = top
var-text-shadow = 0 1px #fff
var-text-indent = 100%
var-font-size = 16px
var-line-height = 3rem
var-letter-spacing = 1px
var-border-radius = 6px
/* Topcoat Text Input */
var-text-input-color--placeholder = #C6C8C8
var-text-input-color--focus = #000
var-text-input-background--focus = #ffffff
var-text-input-height--large = 4rem
var-text-input-font--large = 1.3rem "Source Sans", helvetica, arial, sans-serif
var-text-input-font-weight--large = 200